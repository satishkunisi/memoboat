<% action = (@user.persisted?) ? user_url(@user) : users_url %>
<% button = (@user.persisted?) ? "Update Profile" :  "Sign Up" %> 

<div class="panel panel-primary col-xs-6 col-xs-offset-4">

  <div class= "panel-header">
    <h1> <%= button %> </h1>
  </div>

  <div class= "panel-body">
    <form class="form-horizontal" action="<%= action %>" method="POST">

      <% if @user.persisted? %>
        <input type="hidden" name="_method" value="PUT">
      <% end %>

      <input type="hidden"
             name="authenticity_token"
             value="<%= form_authenticity_token %>">
      
      <div class="form-group">
        <label for="user_email" 
               class="col-xs-2 control-label">
               Email
        </label>

        <div class="col-xs-6">
          <input type="email"
                 class="form-control" 
                 name="user[email]" 
                 id="user_email"
                 value="<%= @user.email %>">
        </div>
      </div>

      <div class="form-group">
        <label for="user_password"
               class="col-xs-2 control-label">
               Password
        </label>

        <div class="col-xs-6">
          <input type="password"
                 class="form-control"  
                 name="user[password]"
                 id="user_password">
        </div>
      </div>

      <div class="col-xs-offset-2">
        <input type="submit"
               class="btn btn-primary"
               value="<%= button %>">
      </div>
    
    </form>
  
  </div>  

</div>




