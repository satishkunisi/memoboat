<h3><span class="glyphicon glyphicon-search"></span> "<%= queryString %>"</h3>
<div class="list-group">
  <% memos.forEach(function (memo) { %>
    <a href="#" class="list-group-item memo-item" 
                data-id="<%= memo.id %>" 
                data-nb-id="<%= memos.notebookId %>">

      <h4 class="list-group-item-heading">
        <% if (memo.hasImage()) { %>
          <%= memo.shortTitle() %>
        <% } else { %>
          <%= memo.get('title') %>
        <% } %>
      </h4>
      <p class="list-group-item-text text-success">
        <span class="glyphicon glyphicon-time"></span>
        <%= moment(memo.get('updated_at')).fromNow() %>
      </p>

      <p class="list-group-item-text 
               <% if (!memo.hasImage()) { %>
                  max_size
               <% } else { %>
                  min_size
               <% } %>
               text-muted">
        <%= memo.preview() %>
      </p>

      <% if (memo.hasImage()) { %>
        <img src="<%= memo.get('image_small_url') %>">
      <% } %>
    </a>
  <% }) %>
</div>